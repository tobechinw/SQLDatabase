head
    title Schools

    div(class = 'ui container')
        div(class='ui inverted segment')
            div(class='ui inverted secondary menu')
                a(class = 'item' href='/') Home
                a(class = 'item' href='/schools') Schools
                a(class = 'item' href='/students') Students
                a(class = 'item' href='/courses') Courses
                a(class = 'item' href='/clubs') Clubs


        div(class = 'float-container')
            each row in rows
                div(class='float-child')
                    div(class = 'ui card')
                        div(class = 'image')
                            img(src='../image/school.png')

                        div(class = 'content')
                            a(class='header' href='/schools/' + row.school_id) #{row.school_name}
                            div(class = 'meta')
                                span(class='date') School ID: #{row.school_id}
                                br

