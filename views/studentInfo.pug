head
    title Student Info

    div(class = 'ui container')
        div(class='ui inverted segment')
            div(class='ui inverted secondary menu')
                a(class = 'item' href='/') Home
                a(class = 'item' href='/schools') Schools
                a(class = 'item' href='/students') Students
                a(class = 'item' href='/courses') Courses
                a(class = 'item' href='/clubs') Clubs

        each row in rows
            div(class = 'ui card')
                div(class = 'image')
                    img(src='../image/elyse.png')

                div(class = 'content')
                    div(class='header') Name: #{row.student_name}
                    div(class = 'meta')
                        span(class='date') Name of School: #{row.school_name}
                        br
                        span(class='date') Email: #{row.email}



    link(rel='stylesheet' href='/css.css')

